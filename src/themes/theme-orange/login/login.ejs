<%- include('../partials/head.ejs', {title}, {description}, {author}, {keywords}, {siteName}) %> 
<body class="bg-gray-900">
    <%- include('../partials/navbar.ejs'), {siteName} %>

<section class="text-gray-400 bg-gray-900 body-font relative">
<!-- messing around with formatting. ah ok, can you assign me some tasks?-->
<!-- you can take any task you wish :p, but if you want i can give you some tasks. I will take a look first-->
<!-- aight -->
  <% if (messages.error) { %>
    <div class="container px-auto py-auto mx-auto">
      <div role="alert">
        <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
          Error!
        </div>
        <div class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
          <p><%= messages.error %></p>
        </div>
      </div>
  <% } %>

    <div class="container px-5 py-24 mx-auto">
      <div class="flex flex-col text-center w-full mb-12">
        <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-white">Login</h1>
        <p class="lg:w-2/3 mx-auto leading-relaxed text-base">Please login with your account!</p>
      </div>



      <form action="/api/auth" method="POST" autocomplete="false">
        <div class="lg:w-1/2 md:w-2/3 mx-auto">
            <div class="flex flex-wrap -m-2">
            <div class="p-2 w-1/2">
                <div class="relative">
                <label for="email" class="leading-7 text-sm text-gray-400">Email</label>
                <input type="email" id="email" name="email" class="w-full bg-gray-800 bg-opacity-40 rounded border border-gray-700 focus:border-yellow-500 focus:bg-gray-900 focus:ring-2 focus:ring-yellow-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
            </div>
            <div class="p-2 w-1/2">
                <div class="relative">
                <label for="password" class="leading-7 text-sm text-gray-400">Password</label>
                <input type="password" id="password" name="password" class="w-full bg-gray-800 bg-opacity-40 rounded border border-gray-700 focus:border-yellow-500 focus:bg-gray-900 focus:ring-2 focus:ring-yellow-900 text-base outline-none text-gray-100 py-1 px-3 leading-8 transition-colors duration-200 ease-in-out">
                </div>
            </div>
            </div>
            <div class="p-10 w-full">
                <button class="flex mx-auto text-white bg-indigo-500 border-0 py-2 px-8 focus:outline-none hover:bg-indigo-600 rounded text-lg">Login</button>
            </div>
        </form>
        <small>Don't have an account? Create one <a class="hover:text-white" href="/register">here</a></small>
        </div>
      </div>
    </div>
  </section>

    <%- include('../partials/footer.ejs'), {siteName} %>
</body>
