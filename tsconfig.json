{
    "compilerOptions":{
       "module":"commonjs",
       "target":"ES2020",
       "moduleResolution":"node",
       "outDir":"build",
       "incremental":true,
       "esModuleInterop":true,
       "strict":true,
       "sourceMap":true,
       "resolveJsonModule": true,
       "strictNullChecks": false,
       "typeRoots":["./node_modules/@types"],
        "types": ["node"],
    },
    "lib":["es2015"],
    "include":["src/"],
    "exclude": ["build/","node_modules/"]
 }